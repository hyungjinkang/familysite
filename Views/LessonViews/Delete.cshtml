@model FamilySite.DATA.EF.LessonView

@{
    ViewBag.Title = "Delete Lesson View on " + Model.DateViewed.ToShortDateString();
}
<div id="family-wrapper">
    <h3>@ViewBag.Title</h3>

    <div id="CourseDetailsContainer">

    <h3>Are you sure you want to delete this?</h3>
    <hr/>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.DateViewed)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateViewed)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Lesson.LessonTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Lesson.LessonTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserDetail.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserDetail.FirstName)
            </dd>

        </dl>

        <div id="clearfix"></div>
        <div id="tdFooter">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" />|
                    @Html.ActionLink("No", "Index", null, new { @class = "btn btn-danger" })
                </div>
            }
        </div>
</div>
</div>