@model FamilySite.DATA.EF.CourseCompletion

@{
    ViewBag.Title = "Course Completion";
}


<div id="family-wrapper">
    <div>
        <h4>@ViewBag.Title</h4>
        <div id="CourseDetailsContainer">

            <div id="tdHeader">
                <h3>@Html.DisplayFor(model => model.Cours.CourseName)</h3>
            </div>

            <div style="text-align:center">

                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.DateCompleted)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DateCompleted)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.UserDetail.FirstName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UserDetail.FirstName)
                    </dd>

                </dl>

            </div>
           

            <div>

                <p style="border-bottom: 3px solid dodgerblue;text-align:center"> All Courses Completed in this year</p>

            </div>

            <div id="tdFooter">
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = Model.CourseCompletionID }, new { @class = "btn btn-primary" })@:|
                }
                @Html.ActionLink("Back to List", "Index",null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
</div>

